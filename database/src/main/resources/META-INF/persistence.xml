<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.1"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <persistence-unit name="hibernate">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>objects.relations.User</class>
        <class>objects.relations.Employee</class>
        <class>objects.relations.EmployeeDetail</class>
        <class>objects.relations.Department</class>
        <class>objects.relations.Meeting</class>
        <class>objects.relations.Invitation</class>




        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hibernate?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />

        </properties>
    </persistence-unit>


    <persistence-unit name="cars">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>objects.cars.one.mapped_super_class.Car</class>
        <class>objects.cars.one.mapped_super_class.ElectricCar</class>
        <class>objects.cars.one.mapped_super_class.PetrolCar</class>

        <class>objects.cars.two.inheritance.single.Car</class>
        <class>objects.cars.two.inheritance.single.ElectricCar</class>
        <class>objects.cars.two.inheritance.single.PetrolCar</class>

        <class>objects.cars.three.inheritance.joined.single.Car</class>
        <class>objects.cars.three.inheritance.joined.single.ElectricCar</class>
        <class>objects.cars.three.inheritance.joined.single.PetrolCar</class>

        <class>objects.cars.four.inheritance.table_per_class.Car</class>
        <class>objects.cars.four.inheritance.table_per_class.ElectricCar</class>
        <class>objects.cars.four.inheritance.table_per_class.PetrolCar</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cars?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>

    <persistence-unit name="test">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>objects.football.Team</class>
        <class>objects.football.League</class>
        <class>objects.football.Player</class>
        <class>objects.football.Game</class>
        <class>objects.football.Country</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/test?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>

</persistence>
