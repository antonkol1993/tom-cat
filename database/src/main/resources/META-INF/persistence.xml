<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="3.1"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd">

    <persistence-unit name="hibernate">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>objects.Person</class>
        <class>objects.Player</class>
        <class>objects.Address</class>

        <class>objects.mapping.one.User</class>
        <class>objects.mapping.one.Tutor</class>
        <class>objects.mapping.one.Student</class>
        <class>objects.mapping.two.User</class>
        <class>objects.mapping.two.Tutor</class>
        <class>objects.mapping.two.Student</class>
        <class>objects.mapping.three.User</class>
        <class>objects.mapping.three.Tutor</class>
        <class>objects.mapping.three.Student</class>
        <class>objects.mapping.four.User</class>
        <class>objects.mapping.four.Tutor</class>
        <class>objects.mapping.four.Student</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/hibernate?createDatabaseIfNotExist=true" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="root" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="show_sql" value="true" />
            <property name="hibernate.temp.use_jdbc_metadata_defaults" value="false" />
        </properties>
    </persistence-unit>


